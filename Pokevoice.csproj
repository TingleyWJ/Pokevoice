<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <AssemblyName>Pokevoice</AssemblyName>
    <RootNamespace>Pokevoice</RootNamespace>
    <Authors>Will Tingley</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="fonts\FiraSans-Black.ttf" />
