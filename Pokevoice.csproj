    <None Remove="fonts\FiraSans-Bold.ttf" />
    <None Remove="fonts\FiraSans-BoldItalic.ttf" />
    <None Remove="fonts\FiraSans-ExtraBold.ttf" />
    <None Remove="fonts\FiraSans-ExtraBoldItalic.ttf" />
    <None Remove="fonts\FiraSans-ExtraLight.ttf" />
    <None Remove="fonts\FiraSans-ExtraLightItalic.ttf" />
    <None Remove="fonts\FiraSans-Italic.ttf" />
    <None Remove="fonts\FiraSans-Light.ttf" />
    <None Remove="fonts\FiraSans-LightItalic.ttf" />
    <None Remove="fonts\FiraSans-Medium.ttf" />
    <None Remove="fonts\FiraSans-MediumItalic.ttf" />
    <None Remove="fonts\FiraSans-Regular.ttf" />
    <None Remove="fonts\FiraSans-SemiBold.ttf" />
    <None Remove="fonts\FiraSans-SemiBoldItalic.ttf" />
    <None Remove="fonts\FiraSans-Thin.ttf" />
    <None Remove="fonts\FiraSans-ThinItalic.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="src\App.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="src\App.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CognitiveServices.Speech" Version="1.18.0" />
    <PackageReference Include="NAudio" Version="2.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="fonts\FiraSans-Black.ttf" />
